/* pages/index/index.wxss */
/* 20210729 */
page{
  background-color: #28c9ff
}
.part1{
  width: 100%;
  height: 400rpx;
  /* 防止无渐变 */
  /* background-color: #f5f5f5; */
  background-image: linear-gradient(top,#fff,#f5f5f5);
  /* 防止低版本无渐变 */
  background-image: -webkit-linear-gradient(top,#fff,#f5f5f5);
  /* 圆角 左上 右上 右下 左下 */
  border-radius: 30rpx 30rpx 0 0;
}
.row1{
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 34rpx 26rpx 18rpx;
}
.address{
  width: 344rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.address image{
  width: 30rpx;
  height: 33rpx;
}
.address .add{
  font-size: 30rpx;
  color: #171717;
  padding-left: 12rpx;
  /* 多余部分不换行 */
  white-space: nowrap;
  /* 多余文字···省略 */
  text-overflow: ellipsis;
  /* 搭配启用 white-space text-overflow overflow 一起用*/
  overflow: hidden;
  width: 280rpx;
}
.tip{
  width: 274rpx;
  color: #9a9a9a;
  font-size: 22rpx;
}

.search-box{
  border: 1px solid #1ac3ff;
  display: flex;
  width: 710rpx;
  height: 62rpx;
  margin: 0 auto;
  border-radius: 31rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.search-icon{
  padding-left: 27rpx;
  padding-right: 12rpx;
}
.search-input{
  width: 500rpx;
}
/* id属性不能空开表示共同使用-->优先级问题 */
.search-btn#searchBtn{
  width: 120rpx;
  height: 62rpx;
  background-color: #29caff;
  background-image: -webkit-linear-gradient(left,#29caff,#00acf6);
  border-radius: 31rpx;
  color: #fff;
  line-height: 62rpx;
  padding: 0;
  font-weight: normal;
}
.small-tips{
  width: 710rpx;
  margin: 10rpx auto;
}
.small-tips .tip{
  padding: 6rpx 10rpx;
  background-color: #efefef;
  border-radius: 22rpx;
  margin-right: 10rpx;
  font-size: 20rpx;  
}
.row3{
  width: 672rpx;
  margin: 40rpx auto 0;
  display: flex;
  justify-content: space-between;
}
.nav{
  width: 100rpx;
  display: flex;
  align-items: center;
  flex-direction: column;
}
.nav image{
  width: 96rpx;
  height: 96rpx;
}
.nav text{
  font-size: 25rpx;
  color: #4f4f4f;
  padding-top: 10rpx;
}

/* 20210730 */
.part2{
  background-color: #f5f5f5;
}
.n{
  display: flex;
  flex-direction: column;
  width: 92rpx;
  align-items: center;
}
.n image{
  width: auto;
  height: 46rpx;
}
.n text{
  font-size: 22rpx;
  line-height: 3;
}
.r1{
  padding-top: 40rpx;
  width: 668rpx;
  margin: 0 auto;
  display: flex;
  justify-content: space-between;
  
}